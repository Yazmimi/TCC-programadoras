<Page x:Class="TCC.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      Background="#FF0B1D51">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOPO -->
        <DockPanel Background="#0B1D51" LastChildFill="False" Margin="0,0,0,10">
            <TextBlock Text="Sistema de Alerta de Alagamento"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#FFD98F00"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="20"
                       DockPanel.Dock="Top"/>
        </DockPanel>

        <!-- CONTEÚDO PRINCIPAL -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0"
                    Width="1000"
                    Background="Transparent">

            <!-- Painéis Clima e Chuva -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <Border Background="#1E3A8A"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10"
                        Width="300">
                    <StackPanel>
                        <TextBlock Text="Clima Atual" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtTemperatura" Text="24°C" FontSize="24" Foreground="White" />
                        <TextBlock x:Name="txtDescricao" Text="Parcialmente nublado" FontSize="14" Foreground="White" />
                    </StackPanel>
                </Border>

                <Border Background="#1E3A8A"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10"
                        Width="300">
                    <StackPanel>
                        <TextBlock Text="Previsão de Chuva" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtChuva" Text="70%" FontSize="24" Foreground="White" />
                        <TextBlock Text="Moderada" FontSize="14" Foreground="White" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Mapa -->
            <Border Background="#102773"
                    CornerRadius="12"
                    Padding="10"
                    Margin="0,0,0,20"
                    Width="Auto"
                    MinWidth="800"
                    MinHeight="400"
                    MaxWidth="1000"
                    MaxHeight="500">
                <Grid>
                    <wv2:WebView2 x:Name="webViewMapa"/>
                </Grid>
            </Border>

            <!-- Legenda -->
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        MaxWidth="800"
                        Margin="0,0,0,20">
                <Border Background="#44000000" BorderBrush="#FFEE5C5C" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0 0 0 8">
                    <TextBlock Text="Alerta Vermelho: Alta criticidade" Foreground="#FFEE5C5C" FontWeight="Bold"/>
                </Border>

                <Border Background="#44000000" BorderBrush="#FFFFC04D" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0 0 0 8">
                    <TextBlock Text="Alerta Laranja: Média criticidade" Foreground="#FFFFC04D" FontWeight="Bold"/>
                </Border>

                <Border Background="#44000000" BorderBrush="#FFFFE04D" BorderThickness="1" CornerRadius="8" Padding="10">
                    <TextBlock Text="Alerta Amarelo: Baixa criticidade" Foreground="#FFFFE04D" FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
