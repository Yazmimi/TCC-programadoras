<Window x:Class="TCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800" Background="#00134D"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Estilo de botão amarelo com hover -->
        <Style x:Key="AmareloHoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFB300"/>
                    <!-- Amarelo mais escuro no hover -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF1247C7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Cabeçalho fixo no topo -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,20">
            <TextBlock Text="Bem-vindo" Foreground="Gold" FontSize="28" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Text="Acesse sua conta ou crie uma nova" Foreground="White" FontSize="14" TextAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Conteúdo central -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <Grid Background="#002060" Height="40" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Login" Grid.Column="0" Click="BtnLogin_Click" Style="{StaticResource AmareloHoverButtonStyle}"/>
                <Button Content="Cadastro" Grid.Column="1" Click="BtnCadastro_Click" Style="{StaticResource AmareloHoverButtonStyle}"/>
            </Grid>

            <!-- LOGIN -->
            <Border x:Name="LoginPanel" Visibility="Visible" Background="#002060" Padding="20" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Email" Foreground="White" FontSize="14"/>
                    <TextBox x:Name="txtEmailLOGIN" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <TextBlock Text="Senha" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="txtSenhaLOGIN" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <TextBlock Text="Esqueceu a senha?" Foreground="Gold" FontSize="12" TextAlignment="Right" Margin="0,10,0,0"/>
                    <Button Content="Entrar" Margin="0,20,0,0" Click="BtnEntrar_Click" Style="{StaticResource AmareloHoverButtonStyle}"/>
                    <Button Content="Ir para pagina principal" Click="BtnirpgPrincipal_Click" Style="{StaticResource AmareloHoverButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- CADASTRO -->
            <Border x:Name="CadastroPanel" Visibility="Collapsed" Background="#002060" Padding="20" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Nome completo" Foreground="White" FontSize="14"/>
                    <TextBox x:Name="txtNome" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <TextBlock Text="Email" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtEmail" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <TextBlock Text="Telefone" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtTelefone" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <TextBlock Text="Região" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                    <ComboBox x:Name="cmbRegiao" Height="40" Foreground="#FF003399" Padding="10" BorderBrush="#FF003399" Background="#FF003399">
                        <ComboBoxItem Content="SENAI" Background="#003399" Foreground="White" BorderBrush="White"/>
                    </ComboBox>

                    <TextBlock Text="Senha" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="txtSenha" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <TextBlock Text="Confirmar senha" Foreground="White" FontSize="14" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="txtConfirmaSenha" Height="40" Background="#003399" Foreground="White" Padding="10"/>

                    <Button Content="Cadastrar" Margin="0,20,0,0" Click="BtnCadastrar_Click" Style="{StaticResource AmareloHoverButtonStyle}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>

</Window>
