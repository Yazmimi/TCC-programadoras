<Window x:Class="TCC.PrincipalWindow1"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meu App" Height="450" Width="800"
        WindowState="Maximized">

    <Grid>
        <!-- Área Principal -->
        <Frame x:Name="MainFrame" Grid.Row="0" Background="#FF000277" />

        <!-- Menu Inferior -->
        <Grid Height="62" VerticalAlignment="Bottom" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="Início" Grid.Column="0" Click="Home_Click" Background="#FF060744" Foreground="White" BorderBrush="#FF000277"/>
            <Button Content="Notificações" Grid.Column="1" Click="Notifications_Click" Background="#FF060744" BorderBrush="#FF060744" Foreground="White"/>
            <Button Content="Perfil" Grid.Column="2" Click="Profile_Click" Background="#FF060744" BorderBrush="#FF060744" Foreground="White"/>
        </Grid>
    </Grid>

</Window>
