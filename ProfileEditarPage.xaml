<Page x:Class="TCC.ProfileEditarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Editar Perfil">

    <Grid Background="#FF000277">
        <Border Background="#1E3A8A" Padding="20" Margin="100"
                CornerRadius="15" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <StackPanel>
                <TextBlock Text="Informações Pessoais" FontSize="18" FontWeight="Bold"
                           Foreground="White" Margin="0,0,0,20"/>

                <!-- Nome -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtNome" Height="35" Padding="10"
                             Background="#1D4ED8" Foreground="White" BorderThickness="0"
                             Text="João Silva" Width="149"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="📧" FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtEmail" Height="35" Padding="10"
                             Background="#1D4ED8" Foreground="White" BorderThickness="0"
                             Text="usuario@exemplo.com"/>
                </StackPanel>

                <!-- Telefone -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="📞" FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtTelefone" Height="35" Padding="10"
                             Background="#1D4ED8" Foreground="White" BorderThickness="0"
                             Text="(11) 98765-4321" Width="149"/>
                </StackPanel>

                <!-- Região -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="📍" FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtRegiao" Height="35" Padding="10"
                             Background="#1D4ED8" Foreground="White" BorderThickness="0"
                             Text="São Paulo, SP" Width="159"/>
                </StackPanel>

                <!-- Nova Senha -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="🔒" FontSize="16" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                    <PasswordBox x:Name="txtSenha" Height="35" Padding="10"
                                 Background="#1D4ED8" Foreground="White" BorderThickness="0" Width="154"
                                 />
                </StackPanel>

                <!-- Botões -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancelar" Width="100" Margin="0,0,10,0"
                            Background="#1D4ED8" Foreground="White" BorderThickness="0"
                            Padding="5" Height="35" Click="Button_Click"/>
                    <Button Content="💾 Salvar Alterações" Width="160"
                            Background="#F59E0B" Foreground="White" BorderThickness="0"
                            Padding="5" Height="35"
                            Click="btnSalvar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
