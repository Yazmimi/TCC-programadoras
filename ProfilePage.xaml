<Page x:Class="TCC.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProfilePage">

    <Grid Background="#1A1F71">
        <Border Background="#1E2A78" Padding="30" CornerRadius="8" BorderBrush="#3C4FA1" BorderThickness="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Perfil" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 0 0 20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <Button x:Name="BtnEditar" Content="Editar Perfil" Click="BtnEditar_Click" Background="#FFA500" Foreground="White" Padding="10,5" Margin="0,0,0,10" />
                </StackPanel>

                <!-- Visualização -->
                <StackPanel x:Name="ViewPanel" Visibility="Visible" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="👤" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblNome" Text="João Silva" FontSize="16" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="📧" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblEmail" Text="usuario@exemplo.com" FontSize="16" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="📞" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblTelefone" Text="(11) 98765-4321" FontSize="16" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="📍" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblLocal" Text="São Paulo, SP" FontSize="16" Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- Edição -->
                <StackPanel x:Name="EditPanel" Visibility="Collapsed" Margin="0,10,0,0">
                    <TextBox x:Name="txtNome" Margin="0,5" Padding="8" />
                    <TextBox x:Name="txtEmail" Margin="0,5" Padding="8" />
                    <TextBox x:Name="txtTelefone" Margin="0,5" Padding="8" />
                    <TextBox x:Name="txtLocal" Margin="0,5" Padding="8" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Cancelar" Click="BtnCancelar_Click" Background="#2D3FA1" Foreground="White" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="💾 Salvar Alterações" Click="BtnSalvar_Click" Background="#FFA500" Foreground="White" Padding="10,5"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
